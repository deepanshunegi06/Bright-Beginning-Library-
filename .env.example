# Environment Variables Template
# Copy this to .env.local and update with your values

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bright-beginning-library?retryWrites=true&w=majority

# Admin Credentials
ADMIN_USERNAME=owner
ADMIN_PASSWORD=owner123

# WiFi Network Name (for reference only)
LIBRARY_WIFI_SSID=Hitesh_5G
NEXT_PUBLIC_LIBRARY_WIFI_SSID=Hitesh_5G

# Library Network IP Prefix (for local development only)
LIBRARY_NETWORK_PREFIX=192.168.86

# Library Geolocation (REQUIRED for Vercel/Cloud deployment)
# Get coordinates from Google Maps: Right-click library location > Copy coordinates
LIBRARY_LATITUDE=28.36695925689707
LIBRARY_LONGITUDE=77.06503118002826
# Maximum distance in meters (recommended: 150-200 for indoor GPS errors)
LIBRARY_RADIUS_METERS=200
